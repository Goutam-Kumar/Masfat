<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <com.mobile.masfat.customwidget.BoldTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/available_balance"
        android:textSize="@dimen/dim_15sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/dim_15dp"/>

    <com.mobile.masfat.customwidget.BoldTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dim_16sp"
        android:textColor="@color/colorAccent"
        android:text="2540 KD"
        android:gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_2dp"
        android:background="@color/seperator_gray"
        android:layout_marginTop="@dimen/dim_20dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dim_10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_100dp"
            android:weightSum="2">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_personal_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/bg_color"
                app:cardElevation="2dp"
                app:cardCornerRadius="@dimen/dim_10dp"
                app:cardPreventCornerOverlap="false"
                android:layout_marginRight="@dimen/dim_2dp">
                <LinearLayout
                    android:id="@+id/lin_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_border_box"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dim_30dp"
                        android:layout_height="@dimen/dim_30dp"
                        android:src="@drawable/personal_info"/>
                    
                    <com.mobile.masfat.customwidget.RegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/personal_info"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dim_5dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/acc_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dim_2dp"
                app:cardBackgroundColor="@color/bg_color"
                app:cardElevation="2dp"
                app:cardCornerRadius="@dimen/dim_10dp"
                app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:id="@+id/lin_acc_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_border_box"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dim_30dp"
                        android:layout_height="@dimen/dim_30dp"
                        android:src="@drawable/account_info"/>

                    <com.mobile.masfat.customwidget.RegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/acc_info"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dim_5dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_100dp"
            android:weightSum="2"
            android:layout_marginTop="@dimen/dim_5dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_topup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/bg_color"
                app:cardElevation="2dp"
                app:cardCornerRadius="@dimen/dim_10dp"
                app:cardPreventCornerOverlap="false"
                android:layout_marginRight="@dimen/dim_2dp">
                <LinearLayout
                    android:id="@+id/lin_top_up"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_border_box"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dim_30dp"
                        android:layout_height="@dimen/dim_30dp"
                        android:src="@drawable/top_up"/>

                    <com.mobile.masfat.customwidget.RegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/top_up"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dim_5dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_booking_history"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dim_2dp"
                app:cardBackgroundColor="@color/bg_color"
                app:cardElevation="2dp"
                app:cardCornerRadius="@dimen/dim_10dp"
                app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:id="@+id/lin_booking_history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_border_box"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dim_30dp"
                        android:layout_height="@dimen/dim_30dp"
                        android:src="@drawable/booking_history"/>

                    <com.mobile.masfat.customwidget.RegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/booking_history"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dim_5dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>