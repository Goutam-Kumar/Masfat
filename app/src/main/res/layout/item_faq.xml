<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_10dp"
            android:orientation="horizontal">

            <com.mobile.masfat.customwidget.BoldTextView
                android:id="@+id/txt_number"
                android:layout_width="@dimen/dim_40dp"
                android:layout_height="@dimen/dim_40dp"
                android:background="@drawable/blue_circle"
                android:textSize="@dimen/dim_18sp"
                android:textColor="@color/white"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dim_10dp">

                <com.mobile.masfat.customwidget.RegularTextView
                    android:id="@+id/faq_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dim_20sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/dim_5dp"/>

                <com.mobile.masfat.customwidget.RegularTextView
                    android:id="@+id/faq_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textSize="@dimen/dim_13sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/dim_10dp"/>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>