<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_20dp">
        <CheckBox
            android:id="@+id/left_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/parking__check_box"
            android:layout_centerVertical="true"/>

        <com.mobile.masfat.customwidget.BoldTextView
            android:id="@+id/txt_left_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim_13sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dim_10dp"
            android:layout_toRightOf="@+id/left_check"/>

        <CheckBox
            android:id="@+id/right_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/parking__check_box"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

        <com.mobile.masfat.customwidget.BoldTextView
            android:id="@+id/txt_right_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim_13sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dim_10dp"
            android:layout_toLeftOf="@+id/right_check"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/border_gray"/>

</LinearLayout>